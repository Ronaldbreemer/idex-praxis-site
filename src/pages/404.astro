---
import BaseLayout from "../layouts/BaseLayout.astro";
import { SUPPORTED, t } from "../lib/i18n";

const path = Astro.url.pathname || "/";
const seg = path.split("/").filter(Boolean)[0] || "";
const lang = SUPPORTED.includes(seg) ? seg : "en";
const c = t(lang);
---
<BaseLayout title="Pagina niet gevonden - IDEX Praxis" description={c.meta.desc} lang={lang}>
  <section class="section">
    <div class="container">
      <div class="card">
        <h1 class="hero-title">Pagina niet gevonden</h1>
        <p style="margin-top:12px; max-width:70ch;">
          Deze pagina bestaat niet (meer). Kies hieronder je taal of ga terug naar de homepagina.
        </p>
        <div class="btn-row" style="margin-top:16px;">
          <a class="btn btn-primary" href={`/${lang}/`}>Ga naar home</a>
          <a class="btn" href="/nl/">NL</a>
          <a class="btn" href="/en/">EN</a>
          <a class="btn" href="/it/">IT</a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
