---
import { t } from "../lib/i18n";
const c = t("nl");
---
<!doctype html>
<html lang="nl">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="robots" content="noindex" />
    <title>{c.root.title}</title>
    <meta http-equiv="refresh" content="1; url=/en/" />
  </head>
  <body>
    <script>
      (function () {
        try {
          var pref = (navigator.language || "en").toLowerCase();
          var lang = pref.indexOf("nl") === 0 ? "nl" : pref.indexOf("it") === 0 ? "it" : "en";
          var target = "/" + lang + "/";
          if (location.pathname === "/" && location.search.indexOf("noredirect=1") === -1) {
            location.replace(target + location.search + location.hash);
          }
        } catch (e) {}
      })();
    </script>

    <!-- Fallback als JS uit staat -->
    <div style="font-family: system-ui; padding: 20px;">
      <h1>{c.root.title}</h1>
      <p>{c.root.chooseLanguage}</p>
      <ul>
        <li><a href="/nl/">{c.root.languages.nl}</a></li>
        <li><a href="/en/">{c.root.languages.en}</a></li>
        <li><a href="/it/">{c.root.languages.it}</a></li>
      </ul>
    </div>
  </body>
</html>
