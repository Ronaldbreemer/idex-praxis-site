---
import { t } from "../lib/i18n";

const { lang, title, body, primaryHref, primaryLabel, secondaryHref, secondaryLabel } = Astro.props;
const c = t(lang);
---
<section class="section">
  <div class="container">
    <div class="card">
      <div class="split">
        <div>
          <div class="kicker">{c.ctaPanel.kicker}</div>
          <h2 style="margin-top:10px;">{title}</h2>
          <p style="margin-top:12px; max-width:65ch;">{body}</p>
          <div class="btn-row">
            <a class="btn btn-primary" href={primaryHref}>{primaryLabel}</a>
            {secondaryHref && secondaryLabel ? (
              <a class="btn" href={secondaryHref}>{secondaryLabel}</a>
            ) : null}
          </div>
        </div>
        <div class="hero-orb" aria-hidden="true">
          <div style="position:relative; z-index:1;">
            <div class="badge">
              <span class="badge-dot"></span>
              <span style="font-weight:850;">{c.ctaPanel.badgeTitle}</span>
              <span style="opacity:.75;">{c.ctaPanel.badgeSubtitle}</span>
            </div>
            <div class="stat-row" style="margin-top:16px;">
              {c.ctaPanel.stats.map((stat) => (
                <div class="stat"><strong>{stat.n}</strong><span>{stat.l}</span></div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
